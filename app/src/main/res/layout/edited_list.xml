<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#d7d3d3"
    >

    <ImageView
        android:id="@+id/cover_film"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:src="@drawable/alien"
        />

    <TextView
        android:id="@+id/judul_filem"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/cover_film"
        android:text="Judul Filmnya"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/rating_film"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Rating Film nya"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/judul_filem"
        android:textColor="#000000"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@+id/cover_film"
        ></View>

</RelativeLayout>
