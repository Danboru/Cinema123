<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eightstudio.danboru.cinema123.MainActivity"
    android:orientation="vertical"

    >


    <Button android:id="@+id/btnViewProducts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View Movie"
        android:layout_marginTop="25dip"/>

    <!--  Button to create a new product screen -->
    <Button android:id="@+id/btnCreateProduct"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add New Movie"
        android:layout_marginTop="25dip"/>


    <Button android:id="@+id/btnCostumer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Costumer"
        android:layout_marginTop="25dip"/>

    <Button android:id="@+id/btnTicketOrdering"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ticket Ordering"
        android:layout_marginTop="25dip"/>

    <Button android:id="@+id/btnListCostumer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="List Costumer"
        android:layout_marginTop="25dip"/>

</LinearLayout>
